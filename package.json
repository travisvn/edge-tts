{
  "name": "@travisvn/edge-tts",
  "version": "1.0.1",
  "description": "Use Microsoft Edge's online text-to-speech service in Node.js WITHOUT needing Microsoft Edge or Windows or an API key",
  "type": "module",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run build:clean && npm run build:esm && npm run build:cjs && npm run build:types && npm run build:package-json",
    "build:clean": "rm -rf dist",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:cjs": "tsc -p tsconfig.cjs.json && echo '{\"type\":\"commonjs\"}' > dist/cjs/package.json",
    "build:types": "tsc -p tsconfig.types.json",
    "build:package-json": "echo 'Build complete'",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "text-to-speech",
    "tts",
    "edge-tts"
  ],
  "author": "Travis <contact@travis.engineer>",
  "license": "AGPL-3.0",
  "homepage": "https://github.com/travisvn/edge-tts",
  "bugs": {
    "url": "https://github.com/travisvn/edge-tts/issues"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "https-proxy-agent": "^7.0.6",
    "uuid": "^11.1.0",
    "ws": "^8.13.0",
    "xml-escape": "^1.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.4.5",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.5",
    "@types/xml-escape": "^1.1.3",
    "typescript": "^5.1.6"
  },
  "directories": {
    "example": "examples"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/travisvn/edge-tts.git"
  }
}
